<h2>All Products</h2>

<table class="table table-striped col-md-12" id="products">
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Seller ID</th>
      <th>Brand</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.product_id %>
        </td>
        <td>
          <%= product.seller_id %>
        </td>
        <td>
          <%= product.brand %>
        </td>
        <td>
          <%= product.price %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
