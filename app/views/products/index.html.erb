<h2>All Products</h2>

<table class="table table-striped col-md-12" id="products">
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Color</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.brand %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= product.color %>
        </td>
        <td>
          <%= link_to "More about #{product.name}", product_path(product) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new product', new_product_path, :class => 'btn btn-primary' %>
