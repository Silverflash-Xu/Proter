<h2>Details about <em><%= @product.name %> <%= @product.category %></em></h2>

<ul id="details">
    
  <li>
    id:
    <%= @product.id %>
  </li>
    
  <li>
    seller_id:
    <%= @product.seller_id %>
  </li>
    
  <li>
    Brand:
    <%= @product.brand %>
  </li>
    
    
  <li>
    Price:
    <%= @product.price %>
  </li>

    
  <li>
    Discount Price:
    <%= @product.price * @product.discount %>
  </li>
    
  <li>
    Weight:
    <%= @product.weight%>
  </li>
    
  <li>
    Color:
    <%= @product.color%>
  </li>
    
   <li>
    Buying quantity:
    <%= @product.buy_count%>
  </li>

  <li>
    Added date:
    <%= @product.created_at.strftime("%B %d, %Y") %>
  </li>
    
  <li>
    Updated date:
    <%= @product.updated_at.strftime("%B %d, %Y") %>
  </li>
</ul>

<h3>Description:</h3>
<p id="packaging box size">
  <%= @product.box %>
</p>

<div class="row">
  <%= link_to 'Add one to cart', buy_path, :class => 'btn btn-primary col-2' %>
  <%= link_to 'Edit', edit_product_path(@product), :class => 'btn btn-primary col-2' %>
  <%= link_to 'Delete', product_path(@product), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2' %>
  <%= link_to 'Back to product list', product_path, :class => 'btn btn-primary col-2' %>
</div>
