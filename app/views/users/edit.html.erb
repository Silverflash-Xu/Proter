<h2>Edit Existing User</h2>
<%= form_tag edit_user_path(@user), :method => :put do %>
  <%= label :user, :name, 'email', :class => 'col-form-label' %>
  <%= text_field :user, :email, :class => 'form-control' %>

  <%= label :user, :encrypted_password, 'password', :class => 'col-form-label' %>
  <%= text_field :user, :encrypted_password, :class => 'form-control' %>

  <%= label :user, :first_name, 'first name', :class => 'col-form-label' %>
  <%= text_field :user, :first_name, :class => 'form-control' %>

  <%= label :user, :last_name, 'last name', :class => 'col-form-label' %>
  <%= text_field :user, :last_name, :class => 'form-control' %>

  <%= label :user, :city, 'city', :class => 'col-form-label' %>
  <%= text_field :user, :city, :class => 'form-control' %>

  <%= label :user, :state, 'state', :class => 'col-form-label' %>
  <%= text_field :user, :state, :class => 'form-control' %>

  <%= label :user, :address, 'address', :class => 'col-form-label'  %>
  <%= text_field :user, :address, :class => 'form-control' %>

  <%= label :user, :card_number, 'card number', :class => 'col-form-label' %>
  <%= text_field :user, :card_number, :class => 'form-control' %>

  <%= label :user, :card_cvv, 'card cvv', :class => 'col-form-label' %>
  <%= text_field :user, :card_cvv, :class => 'form-control' %>

  <%= label :user, :card_expired_date, 'card expired date', :class => 'col-form-label' %>
  <%= text_field :user, :card_expired_date, :class => 'form-control' %>
  <br/>
  <%= submit_tag 'Save Changes', :class => 'btn btn-warning' %>
  <%= link_to 'Cancel', profile_path, :class => 'btn btn-secondary' %>
<% end %>
